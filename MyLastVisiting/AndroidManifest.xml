<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ftfl.mylastvisiting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ftfl.mylastvisiting.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ftfl.mylastvisiting.AddPlacesActivity"
            android:label="@string/add_place" >
        </activity>
        <activity
            android:name="com.ftfl.mylastvisiting.PlacesListActivity"
            android:label="@string/place_list" >
        </activity>
        <activity
            android:name="com.ftfl.mylastvisiting.PlacesViewActivity"
            android:label="@string/place_viewed" >
        </activity>

    </application>

</manifest>
